    header title
  </div>
  <div class="header_botton">
    <a href="#">チケットを終了する</a>
  </div>
</div>

<div class="messages">
  <div class="message">
    <div class="upper_message">
      <div class="message_user">
        Tom
      </div>
      <div class="message_date">
        2021/2/3(Wed) 22:22:22
      </div>
    </div>
    <div class="lower_message">
